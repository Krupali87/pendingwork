<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="37dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">

            <TextView
                android:textSize="20sp"
                android:textColor="#0a0f22"
                android:id="@+id/tv_add_new_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_new_friend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/img_close_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_popup"
                app:layout_constraintBottom_toBottomOf="@+id/tv_add_new_friend"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_add_new_friend"/>

            <EditText
                android:textColor="#0e1724"
                android:textColorHint="#6f7b8c"
                android:id="@+id/et_name"
                android:background="@drawable/bg_input_dialog"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="@string/name"
                android:inputType="text"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@+id/tv_add_new_friend"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_security_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:endIconMode="custom"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/et_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:textColor="#0e1724"
                    android:textColorHint="#6f7b8c"
                    android:id="@+id/et_security_code"
                    android:background="@drawable/bg_input_dialog"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/security_code"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    app:layout_constraintTop_toBottomOf="@+id/et_name"/>
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:textColor="#0e1724"
                android:textColorHint="#6f7b8c"
                android:id="@+id/et_phone_number"
                android:background="@drawable/bg_input_dialog"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/phone_number"
                android:inputType="number"
                android:imeOptions="actionDone"
                app:layout_constraintTop_toBottomOf="@+id/input_security_code"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_add_friend"
                android:background="@drawable/bg_btn_add"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:paddingVertical="14dp"
                app:layout_constraintTop_toBottomOf="@+id/et_phone_number">

                <ImageView
                    android:id="@+id/ic_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_add_friend"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_add_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_friend"
                    android:layout_marginStart="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:textSize="14sp"
                android:textColor="#3e5370"
                android:id="@+id/tv_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/or"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_add_friend"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_add_friend_by_qr_code"
                android:background="@drawable/bg_btn_scan_qr"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:paddingVertical="14dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_or">

                <ImageView
                    android:id="@+id/ic_qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_qr_code_black"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_scan_qr_code"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:textSize="16sp"
                    android:textColor="#3e5370"
                    android:id="@+id/tv_scan_qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_qr_code"
                    android:layout_marginStart="28dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/frLoading"
                android:background="#52494949"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:layout_gravity="center"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>